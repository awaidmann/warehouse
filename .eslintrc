{
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "env": {
    "es6": true,
    "node": true,
  },
    "ecmaFeatures": {
    "modules": true,
    "jsx": true,
  },
  "rules": {
    // STRICT
    "strict": [2, "global"],

    // BEST PRACTICE
    "no-unexpected-multiline": 2,
    "accessor-pairs": [2, {"getWithoutSet": true}],
    "block-scoped-var": 2,
    "consistent-return": 2,
    "curly": [2, "all"],
    "dot-location": [2, "property"],
    "eqeqeq": [2, "smart"],
    "no-alert": 2,
    "no-caller": 2,
    "no-else-return": 2,
    "no-empty-label": 2,
    "no-empty-pattern": 2,
    "no-eq-null": 2,
    "no-eval": 2,
    "no-extra-bind": 2,
    "no-implied-eval": 2,
    "no-invalid-this": 2,
    "no-labels": 2,
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-magic-numbers": 2,
    "no-multi-spaces": 2,
    "no-native-reassign": 2,
    "no-new-func": 2,
    "no-new-wrappers": 2,
    "no-new": 2,
    "no-param-reassign": [2, {"props": true}],
    "no-proto": 2,
    "no-return-assign": [2, "always"],
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-throw-literal": 2,
    "no-unused-expressions": 2,
    "no-useless-call": 2,
    "no-useless-concat": 2,
    "no-void": 2,
    "no-warning-comments": 1,
    "no-with": 2,
    "radix": 2,
    "yoda": 2,

    // STYLE
    "brace-style": 1,
    "camelcase": 1,
    "comma-spacing": 1,
    "comma-style": 1,
    "computed-property-spacing": [1, "never"],
    "eol-last": 1,
    "indent": [1, 2],
    "key-spacing": 1,
    "linebreak-style": 1,
    "new-cap": 1,
    "new-parens": 1,
    "no-array-constructor": 1,
    "no-inline-comments": 1,
    "no-lonely-if": 1,
    "no-multiple-empty-lines": [1, {"max": 2, "maxEOF": 1}],
    "no-nested-ternary": 1,
    "no-new-object": 1,
    "no-trailing-spaces": 1,
    "no-unneeded-ternary": 1,
    "object-curly-spacing": [1, "always"],
    "operator-linebreak": [1, "before"],
    "quote-props": [1, "as-needed"],
    "quotes": [1, "single", "avoid-escape"],
    "semi": [1, "never"],
    "spaced-comment": [1, "always"],

    // NODE
    "global-require": 2,
    "callback-return": 2,
    "handle-callback-err": [2, "err"],
    "no-new-require": 2,
    "no-process-exit": 2,
    "no-sync": 1,

    // ES6
    "constructor-super": 2,
    "no-arrow-condition": 2,
    "no-class-assign": 2,
    "no-const-assign": 2,
    "no-dupe-class-members": 2,
    "no-this-before-super": 2,
    "no-var": 2,
    "object-shorthand": [2, "always"],
    "prefer-arrow-callback": 2,
    "prefer-const": 2,
    "prefer-spread": 2,
    "prefer-reflect": 2,
    "prefer-template": 2,

    // VARS
    "no-catch-shadow": 2,
    "no-label-var": 2,
    "no-shadow-restricted-names": 2,
    "no-shadow": 2,
    "no-undef-init": 2,
    "no-undefined": 2,
    "no-use-before-define": [2, "nofunc"],
  }
}
